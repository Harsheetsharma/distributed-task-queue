{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES6",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "rootDir": "src",
    "outDir": "dist",
    "skipLibCheck": true,
    "baseUrl": ".",  // This allows relative resolution from this directory
    "paths": {
      "@db/*": ["../db/*"]  // CORRECT: points directly to the files in db
    }
  },
  "include": [
    "src/**/*"
  ],
  "references": [
    { "path": "../db" }
  ]
}
